<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splashscreen"
  >

  <androidx.appcompat.widget.Toolbar

      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#AFC8E0"
      app:menu="@menu/menu1"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme" />

  <TextView
      android:id="@+id/stt"

      android:layout_width='match_parent'
      android:layout_height="wrap_content"
      android:layout_below="@id/image"
      android:layout_centerHorizontal="true"
      android:layout_margin="20dp"
      android:padding="5dp"

      android:background="@drawable/shape"
      android:text="Your duty leave application has been received  successfully "
      android:textAlignment="center"
      android:textColor="#FBA300"
      android:textSize="30dp"
      android:textStyle="bold" />
  <TextView
      android:id="@+id/name"
      android:layout_width='200dp'
      android:textStyle="bold"
      android:textColor="#061356"
      android:textAlignment="center"
      android:layout_height="wrap_content"
      android:textSize="30dp"
      android:layout_marginTop="80dp"
      android:layout_centerHorizontal="true"
      android:text="Duty leave Management System" />

  <ImageView
      android:id="@+id/image"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/img_logo"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/name"
      android:layout_marginTop="50dp"
      ></ImageView>

  <TableLayout
      android:id="@+id/simpleTableLayout"
      android:layout_width="301dp"
      android:layout_height="81dp"

      android:layout_below="@id/stt"
      android:layout_marginBottom="20dp"
      android:layout_centerHorizontal="true"

      android:layout_marginTop="130dp"
      android:stretchColumns="1"> <!-- stretch the second column of the layout-->

    <!-- first row of the table layout-->
    <TableRow

        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape2">

      <!-- first element of the row-->


      <TextView
          android:id="@+id/txt"

          android:layout_width='220dp'

          android:layout_height="80dp"
          android:layout_marginTop="25dp"


          android:text="Check Status"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="20dp" />

      <ImageButton
          android:id="@+id/chch"
          android:layout_width="wrap_content"
          android:layout_height="57dp"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="10dp"
          android:background="@drawable/shape"
          android:layout_marginBottom="5dp"
          android:backgroundTint="#E5E5E5"
          android:src="@drawable/image_arrow" />
    </TableRow>
  </TableLayout>




</RelativeLayout>