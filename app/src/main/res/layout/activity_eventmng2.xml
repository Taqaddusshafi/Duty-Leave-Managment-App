<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen"
    tools:context=".AdminManagment">
    <TextView
        android:id="@+id/idd"
        android:layout_below="@+id/toolbar22"
        android:layout_width='300dp'
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="#061356"
        android:textAlignment="center"

        android:layout_height="wrap_content"
        android:textSize="30dp"

        android:layout_centerHorizontal="true"
        android:text="Event Management Admin Panel" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/idd"
        android:layout_marginTop="50dp"
        ></ImageView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar22"
        android:layout_width="match_parent"
        app:title="Admin Dashboard"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="#AFC8E0"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/menudash"
        />


    <TableLayout
        android:id="@+id/simpleTableLayout1"
        android:layout_width="301dp"
        android:layout_height="81dp"
        android:layout_below="@+id/image"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="100dp"
        android:stretchColumns="1"> <!-- stretch the second column of the layout-->

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2">

            <!-- first element of the row-->


            <TextView
                android:id="@+id/let"

                android:layout_width='220dp'

                android:layout_height="80dp"
                android:layout_marginTop="25dp"


                android:text="Add New Event"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btnnew"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E5E5E5"
                android:src="@drawable/image_arrow" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/simpleTableLayout"
        android:layout_width="301dp"
        android:layout_height="81dp"
        android:layout_below="@id/simpleTableLayout1"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"
        android:stretchColumns="1"> <!-- stretch the second column of the layout-->

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2">

            <!-- first element of the row-->


            <TextView
                android:id="@+id/let1"

                android:layout_width='220dp'

                android:layout_height="80dp"
                android:layout_marginTop="25dp"

                android:text="Remove Old Event"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btnold"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E5E5E5"
                android:src="@drawable/image_arrow" />
        </TableRow>
    </TableLayout>

</RelativeLayout>