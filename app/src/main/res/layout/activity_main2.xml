<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen"
    tools:context=".MainActivity2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar20"
            android:layout_width="match_parent"
            app:title="Form"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="#AFC8E0"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/menudash"
            />

    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/idd"
        android:layout_width='300dp'
        android:textStyle="bold"
        android:textColor="#061356"
        android:textAlignment="center"

        android:layout_height="wrap_content"
        android:textSize="30dp"

        android:layout_centerHorizontal="true"
        android:text="Fill Details Here" />

    <EditText
        android:id="@+id/name"



        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:background="@drawable/shape"
        android:layout_below="@id/idd"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText

        android:layout_marginTop="20dp"
        android:id="@+id/time"
        android:padding="10dp"
        android:inputType="none"

        android:drawableRight="@drawable/timepick"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/shape"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:hint="time"
        android:ems="10"
         />

    <EditText
        android:id="@+id/date"
        android:layout_below="@+id/time"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="53dp"
        android:hint="Date"
        android:background="@drawable/shape"
        android:drawableRight="@drawable/cal"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:ems="10"
        android:layout_marginTop="20dp"
         />

    <EditText
        android:id="@+id/seminarcode"
        android:layout_below="@+id/date"
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Seminar Name" />
    <EditText
        android:id="@+id/Regno"
        android:layout_below="@+id/seminarcode"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:padding="10dp"
        android:background="@drawable/shape"
        android:ems="10"

        android:inputType="number"
        android:hint="Reg No" />
    <EditText
        android:id="@+id/rollno"
        android:padding="10dp"
        android:layout_below="@+id/Regno"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:ems="10"
        android:background="@drawable/shape"
        android:inputType="number"
        android:hint="Roll No" />
    <EditText
        android:id="@+id/section"
        android:layout_below="@+id/rollno"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="53dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="section" />
        <ProgressBar

            android:id="@+id/progressBar1"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:indeterminateTint="@color/green"
            android:layout_below="@+id/section"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
        android:layout_width="250dp"
        android:id="@+id/submit"
        android:text="Submit"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FA8900"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/section"></Button>

</RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</LinearLayout>