<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar60"
        android:layout_width="match_parent"
        app:title="Status"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="#AFC8E0"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/menudash"
        />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:elevation="0dp"

        android:backgroundTint="#B0CAE1"

        android:layout_height="wrap_content"
        app:tabIndicatorColor="#FF5722"
        app:tabSelectedTextColor="#FF5722"
        app:tabSelectedTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/black"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewPager"

        android:background="@drawable/splashscreen"
        android:layout_weight="1"/>

</LinearLayout>